extends layout

block link
  -var moviedata= data;
  -var comments= comments

block content
  div#movieimg
    img(src='http://image.tmdb.org/t/p/' + 'w396' + moviedata.poster_path)
    b
      p= moviedata.tagline
  div#moviedescription
    p
    h1
      p= moviedata.title
    b Overview:
    p= moviedata.overview
    if (moviedata.genres != "")
      b Genres:
      ul
        each val in moviedata.genres
          li= val.name
    if (moviedata.release_date != "")
      b Release Date:
      p= moviedata.release_date
    if (moviedata.runtime != 0)
      b Length:
      p= moviedata.runtime + ' minutes'
    if (moviedata.budget != 0)
      b Budget:
      p= '$' + moviedata.budget
    if (moviedata.production_companies != "")
      b Production companies:
      ul
        each val in moviedata.production_companies
          li= val.name
    form
      input(id='input-21d', value='0', type='number', class='rating', min=0, max=5, step=0.5, data-size='sm')
      input(type="text", name="commentfield", id="comment", class="form-control", placeholder="Comment now...")
