doctype html
html
  block link
    -var selected = 'Home'; //default

  -var menu = { 'Home': '/','Browse': '/browse', 'Api': '/api', 'Report': '/report'};
  -var user = name;
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content="IE=edge")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/star-rating.css', media='all', type='text/css')
  body
      div(class="container-fluid header")
        nav(class="navbar navbar-default navbar-fixed-top" role="navigation")
          div(class="container")
            div(class="navbar-header")
              button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
              a(class="navbar-brand", href="/") Movie Rater App
            div(id="navbar", class="collapse navbar-collapse")
              ul(class="nav navbar-nav")
                each val, key in menu
                  if selected === key
                    li(class="active")
                      a(href=val)= key
                  else
                    li
                      a(href=val)= key
              ul(class="nav navbar-nav navbar-right")
                li
                  a(href="#")= "Welcome, " + user
                li(class="dropdown")
                  a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false")
                    |Login
                    span(class="caret")
                  ul(class="dropdown-menu logindropdown", role="menu")
                    div(class="loginbox")
                      form#loginform(class="form-horizontal", name="login", action="/api/login", method="post")
                        div(class="form-group")
                          li
                            input#loginname(class="form-control", type="text", name="name", placeholder="Username")
                        div(class="form-group")
                          li
                            input#loginpass(class="form-control", type="password", name="pass", placeholder="Password")
                        li(class="divider")
                        div(class="form-group")
                          li
                            button(class="btn btn-default", type="submit")
                              |Login
                            |  or register&nbsp;
                            a(href="/register") here
                            | .
                        div#loginmessage

      block content
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
      script(src='/javascripts/script.js')
      script(src='/javascripts/bootstrap.min.js')
      script(src='/javascripts/star-rating.js', type='text/javascript')
