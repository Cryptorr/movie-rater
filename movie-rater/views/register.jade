extends layout

block link
  -var selected = 'Register';

block content
  h1 Register
  p Here you can register your own account, so you can comment under your name.
  div.loginbox
    form(name="login", action="/api/make_account", method="post", onsubmit="return checkPass(this);")
      p
        | Username
        br
        input(type="text", name="name")
      p
        | Enter password
        br
        input(type="password", name="pass")
      p
        | Re-enter password
        br
        input(type="password", name="pwd2")
      p
        input(type="submit", value="Register")
